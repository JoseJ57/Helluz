@model Helluz.Models.TokenQr

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dt class="col-sm-3">Código QR</dt>
    <dd class="col-sm-9">
        <!-- ⭐ CAMBIO AQUÍ: Usar la imagen guardada -->
        <img src="~/qr/qr_@(Model.IdToken).png"
             alt="QR para marcar asistencia"
             width="300"
             height="300"
             class="border border-dark p-2" />
    </dd>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdToken">Ediart</a> |
    <a asp-action="Index">Regresar</a>
</div>
