@model Helluz.Models.Usuario

@{
    ViewData["Title"] = "Editar";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card ">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="formMembresia">
                        <input type="hidden" asp-for="IdUsuario" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label class=" text form-label fw-bold">Tipo</label>
                        </div>

                        <hr>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                            <input asp-for="NombreUsuario" class="form-control" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <!-- Costo y Sesiones -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Password" class="form-control" type="text" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Estado actual (informativo) -->
                        <div class="alert @(Model.Estado ? "alert-success" : "alert-secondary")">
                            <strong>Estado actual:</strong>
                            @if (Model.Estado)
                            {
                                <span><i class="fas fa-check"></i> Activa</span>
                            }
                            else
                            {
                                <span><i class="fas fa-times"></i> Inactiva</span>
                            }
                        </div>

                        <input asp-for="Estado" type="hidden" />
                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label fw-bold"></label>
                            <input asp-for="Rol" class="form-control" />
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('input[name="EsPromocion"]').change(function() {
                if ($(this).val() === 'true') {
                    $('#seccionFechas').slideDown();
                } else {
                    $('#seccionFechas').slideUp();
                    $('input[name="FechaActivo"]').val('');
                    $('input[name="FechaInactivo"]').val('');
                }
            });

            $('#formMembresia').submit(function(e) {
                var esPromocion = $('input[name="EsPromocion"]:checked').val() === 'true';

                if (esPromocion) {
                    var fechaInicio = $('input[name="FechaActivo"]').val();
                    var fechaFin = $('input[name="FechaInactivo"]').val();

                    if (!fechaInicio || !fechaFin) {
                        e.preventDefault();
                        alert('Las promociones deben tener fechas de inicio y fin.');
                        return false;
                    }
                }
            });
        });
    </script>
}
