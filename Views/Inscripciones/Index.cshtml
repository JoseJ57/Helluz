@model IEnumerable<Helluz.Models.Inscripcion>

@{
    ViewData["Title"] = "Inscripciones";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-file-signature"></i> Inscripciones</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Inscripción
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito o error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla de inscripciones -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="tablaInscripciones">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Horario</th>
                            <th>Método de Pago</th>
                            <th>Nro. Permisos</th>
                           
                            <th>Estado</th>
                            <th>Alumno</th>
                            <th>Membresía</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>

                                <!-- Mostrar hora inicio y fin -->
                                <td>
                                    @if (item.Horario != null)
                                    {
                                        @($"{item.Horario.HoraInicio:HH\\:mm} - {item.Horario.HoraFin:HH\\:mm}")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin horario</span>
                                    }
                                </td>

                                <td>@item.MetodoPago</td>
                                <td>@item.NroPermisos</td>

                                <td>
                                    @switch (item.Estado)
                                    {
                                        case Helluz.Dto.EstadoInscripcion.Activa:
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Activa
                                            </span>
                                            break;
                                        case Helluz.Dto.EstadoInscripcion.Vencida:
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Vencida
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Desconocido</span>
                                            break;
                                    }
                                </td>

                                <td>@item.Alumno?.Apellido</td>
                                <td>@item.Membresia?.Nombre</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdInscripcion"
                                           class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdInscripcion"
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdInscripcion"
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a asp-action="Renovar" asp-route-id="@item.IdInscripcion" class="btn btn-success btn-sm">
                                            Renovar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaInscripciones').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[0, 'asc']]
            });
        });
    </script>
}
