@model Helluz.Models.Inscripcion
@using Helluz.Dto

@{
    ViewData["Title"] = "Editar Inscripción";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Inscripción
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" id="formInscripcion">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="IdInscripcion" />

                        <!-- Fechas -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaInicio" class="form-label fw-bold">Fecha Inicio</label>
                                <input asp-for="FechaInicio" class="form-control" type="date" id="FechaInicio" readonly
                                       value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaFin" class="form-label fw-bold">Fecha Fin</label>
                                <input asp-for="FechaFin" class="form-control" type="date" id="FechaFin" readonly
                                       value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="FechaFin" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Método de pago y NroPermisos -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetodoPago" class="form-label fw-bold">Método de Pago</label>
                                <select asp-for="MetodoPago" class="form-select"
                                        asp-items="@(new SelectList(Enum.GetValues(typeof(MetodosPagos)), Model.MetodoPago))">
                                    <option value="">Seleccione un método</option>
                                </select>
                                <span asp-validation-for="MetodoPago" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NroPermisos" class="form-label fw-bold">Nro. permisos</label>
                                <input asp-for="NroPermisos" class="form-control" type="number" min="1" />
                                <span asp-validation-for="NroPermisos" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold"></label>
                            <select asp-for="Estado" class="form-select"
                                    asp-items="@(new SelectList(Enum.GetValues(typeof(EstadoInscripcion)), Model.Estado))">
                                <option value="">Seleccione un estado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <!-- Alumno, Membresía -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdAlumno" class="form-label fw-bold">Alumno</label>
                                <select asp-for="IdAlumno" class="form-select"
                                        asp-items="@(ViewData["IdAlumno"] as SelectList)">
                                    <option value="">Seleccione un alumno</option>
                                </select>
                                <span asp-validation-for="IdAlumno" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="IdMembresia" class="form-label fw-bold">Membresía</label>
                                <select asp-for="IdMembresia" class="form-select" id="membresiaSelect">
                                    <option value="">Seleccione una membresía</option>
                                </select>
                                <span asp-validation-for="IdMembresia" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div class="mb-3">
                            <label asp-for="IdHorario" class="form-label fw-bold">Horario</label>
                            <select asp-for="IdHorario" class="form-select" asp-items="@(ViewData["IdHorario"] as SelectList)">
                                <option value="">Seleccione un horario</option>
                            </select>
                            <span asp-validation-for="IdHorario" class="text-danger"></span>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const membresiaSelect = document.getElementById("membresiaSelect");

            // Obtener membresías desde ViewBag
            const membresiasData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Membresias));

            // Limpiar select y cargar membresías
            membresiaSelect.innerHTML = '<option value="">Seleccione una membresía</option>';
            membresiasData.forEach(m => {
                const option = document.createElement("option");
                option.value = m.IdMembresia;
                option.text = m.Nombre;
                option.dataset.dias = m.DiasPorSemana;
                option.dataset.duracion = m.Duracion;
                option.dataset.unidad = m.UnidadTiempo;

                if (m.IdMembresia === @Model.IdMembresia) {
                    option.selected = true;
                }

                membresiaSelect.appendChild(option);
            });

            // Si quieres, aquí podrías mantener lógica de cálculo de fecha fin según membresía
            // (pero sin NroSesiones, solo actualizar fechaFin si se desea)
        });
    </script>
}
