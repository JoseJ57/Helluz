@model Helluz.Models.Inscripcion
@using Helluz.Dto

@{
    ViewData["Title"] = "Registrar Inscripción";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-list"></i> Registrar Nueva Inscripción
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" id="formInscripcion">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Método de pago y NroPermisos -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetodoPago" class="form-label fw-bold"></label>
                                <select asp-for="MetodoPago" class="form-select">
                                    <option value="">Seleccione un método</option>
                                    @foreach (var metodo in Enum.GetValues(typeof(MetodosPagos)))
                                    {
                                        <option value="@metodo">@metodo</option>
                                    }
                                </select>
                                <span asp-validation-for="MetodoPago" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NroPermisos" class="form-label fw-bold"></label>
                                <input asp-for="NroPermisos" class="form-control" type="number" value="3" readonly />
                                <span asp-validation-for="NroPermisos" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold"></label>
                            <input type="text" class="form-control" value="Activa" readonly />
                            <input asp-for="Estado" type="hidden" value="0" />
                        </div>

                        <!-- Fechas -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Fecha Inicio</label>
                                <input type="date" class="form-control" id="FechaInicioDisabled" disabled />
                                <input asp-for="FechaInicio" type="hidden" id="FechaInicio" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Fecha Fin</label>
                                <input type="date" class="form-control" id="FechaFinDisabled" disabled />
                                <input asp-for="FechaFin" type="hidden" id="FechaFin" />
                                <span asp-validation-for="FechaFin" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Alumno y Membresía -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdAlumno" class="form-label fw-bold"></label>
                                <select asp-for="IdAlumno" class="form-select" asp-items="ViewBag.IdAlumno">
                                    <option value="">Seleccione un alumno</option>
                                </select>
                                <span asp-validation-for="IdAlumno" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="IdMembresia" class="form-label fw-bold"></label>
                                <select asp-for="IdMembresia" class="form-select" id="membresiaSelect">
                                    <option value="">Seleccione una membresía</option>
                                    @foreach (var m in (IEnumerable<dynamic>)ViewBag.Membresias)
                                    {
                                        <option value="@m.IdMembresia"
                                                data-dias="@m.DiasPorSemana"
                                                data-duracion="@m.Duracion"
                                                data-unidad="@m.UnidadTiempo">
                                            @m.Nombre
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="IdMembresia" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div class="mb-3">
                            <label asp-for="IdHorario" class="form-label fw-bold">Horario</label>
                            <select asp-for="IdHorario" class="form-select" asp-items="ViewBag.IdHorario">
                                <option value="">Seleccione un horario</option>
                            </select>
                            <span asp-validation-for="IdHorario" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Inscripción
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const membresiaSelect = document.getElementById("membresiaSelect");
            const fechaInicioInput = document.getElementById("FechaInicio");
            const fechaFinInput = document.getElementById("FechaFin");
            const fechaInicioDisabled = document.getElementById("FechaInicioDisabled");
            const fechaFinDisabled = document.getElementById("FechaFinDisabled");

        // Fecha inicio = hoy (fecha local)
        const hoy = new Date();
        const hoyLocal = hoy.toLocaleDateString('en-CA'); // YYYY-MM-DD
        fechaInicioInput.value = hoyLocal;
        fechaInicioDisabled.value = hoyLocal;


            function isBusinessDay(d) {
                const dow = d.getDay();
                return dow !== 0 && dow !== 6;
            }

            function countBusinessDaysInclusive(start, end) {
                const a = new Date(start);
                const b = new Date(end);
                if (b < a) return 0;
                let cnt = 0;
                const cur = new Date(a);
                while (cur <= b) {
                    if (isBusinessDay(cur)) cnt++;
                    cur.setDate(cur.getDate() + 1);
                }
                return cnt;
            }

            function calcularFechaFin() {
                const selectedOption = membresiaSelect.options[membresiaSelect.selectedIndex];
                if (!selectedOption || !selectedOption.dataset.duracion || !selectedOption.dataset.unidad || !selectedOption.dataset.dias) {
                    fechaFinInput.value = "";
                    fechaFinDisabled.value = "";
                    return;
                }

                const duracion = parseInt(selectedOption.dataset.duracion, 10);
                const unidad = selectedOption.dataset.unidad;
                const diasPorSemana = parseInt(selectedOption.dataset.dias, 10) || 5;

                let fechaInicio = new Date(fechaInicioInput.value);
                fechaInicio.setHours(0,0,0,0);
                let fechaFin = new Date(fechaInicio);

                if (unidad === "Dia") {
                    let businessCount = 0;
                    while (businessCount < duracion) {
                        fechaFin.setDate(fechaFin.getDate() + 1);
                        if (isBusinessDay(fechaFin)) businessCount++;
                    }
                } else if (unidad === "Mes") {
                    fechaFin.setMonth(fechaFin.getMonth() + duracion);
                } else if (unidad === "Año") {
                    fechaFin.setFullYear(fechaFin.getFullYear() + duracion);
                }

                const fechaFinISO = fechaFin.toISOString().split('T')[0];
                fechaFinInput.value = fechaFinISO;
                fechaFinDisabled.value = fechaFinISO;
            }

            membresiaSelect.addEventListener("change", calcularFechaFin);
            fechaInicioInput.addEventListener("change", calcularFechaFin);

            calcularFechaFin();
        });
    </script>
}
