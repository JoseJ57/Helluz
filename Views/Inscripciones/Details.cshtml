@model Helluz.Models.Inscripcion

@{
    ViewData["Title"] = "Detalles de Inscripción";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> Detalles de la Inscripción
                    </h4>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha de Inicio</dt>
                        <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Fecha de Fin</dt>
                        <dd class="col-sm-8">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Horario</dt>
                        <dd class="col-sm-8">
                            @if (Model.Horario != null)
                            {
                                @($"{Model.Horario.HoraInicio:HH\\:mm} - {Model.Horario.HoraFin:HH\\:mm}")
                            }
                            else
                            {
                                <span class="text-muted">Sin horario asignado</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Método de Pago</dt>
                        <dd class="col-sm-8">@Model.MetodoPago</dd>

                        <dt class="col-sm-4">Nro. de Permisos</dt>
                        <dd class="col-sm-8">@Model.NroPermisos</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>

                        <dt class="col-sm-4">Alumno</dt>
                        <dd class="col-sm-8">@Model.Alumno?.Apellido</dd>

                        <dt class="col-sm-4">Membresía</dt>
                        <dd class="col-sm-8">@Model.Membresia?.Nombre</dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.IdInscripcion" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
