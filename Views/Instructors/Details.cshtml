@model Helluz.Models.Instructor

@{
    ViewData["Title"] = "Detalles del Instructor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-tie"></i> Detalles del Instructor
                    </h4>
                </div>
                <div class="card-body">

                    <!-- Foto o icono -->
                    <div class="text-center mb-4">
                        <i class="fas fa-chalkboard-teacher fa-5x text-primary mb-2"></i>
                        <h3 class="fw-bold text-dark mb-0">@Model.Nombre @Model.Apellido</h3>
                        <span class="text-muted">#@Model.IdInstructor</span>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 text">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 text">Apellido:</dt>
                        <dd class="col-sm-8">@Model.Apellido</dd>

                        <dt class="col-sm-4 text">Carnet:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary fs-6">@Model.Carnet</span>
                        </dd>

                        <dt class="col-sm-4 text">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">
                            @(Model.FechaNacimiento.HasValue
                                                        ? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                                        : "Sin fecha")
                        </dd>


                        <dt class="col-sm-4 text">Correo:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-envelope text-primary"></i> @Model.Correo
                        </dd>

                        <dt class="col-sm-4 text">Celular:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-phone text-success"></i> @Model.Celular
                        </dd>

                        <dt class="col-sm-4 text">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <h5>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> ACTIVO
                                    </span>
                                </h5>
                            }
                            else
                            {
                                <h5>
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle"></i> INACTIVO
                                    </span>
                                </h5>
                            }
                        </dd>

                        <dt class="col-sm-4 text">Usuario Asignado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Usuario != null)
                            {
                                <span class="badge bg-info text-dark fs-6">
                                    <i class="fas fa-user"></i> @Model.Usuario.NombreUsuario
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Sin usuario asignado</span>
                            }
                        </dd>
                    </dl>

                    <hr>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.IdInstructor" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdInstructor" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
