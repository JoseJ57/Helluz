@model Helluz.Models.Instructor

@{
    ViewData["Title"] = "Editar Instructor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit"></i> Editar Instructor
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="formInstructor">
                        <input type="hidden" asp-for="IdInstructor" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label fw-bold"></label>
                                <input asp-for="Apellido" class="form-control" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Carnet" class="form-label fw-bold"></label>
                                <input asp-for="Carnet" class="form-control" />
                                <span asp-validation-for="Carnet" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold"></label>
                                <input asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Celular" class="form-label fw-bold"></label>
                                <input asp-for="Celular" class="form-control" />
                                <span asp-validation-for="Celular" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Estado" />
                            <label class="form-check-label fw-bold" asp-for="Estado"></label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label fw-bold"></label>
                            <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId">
                                <option value="">-- Sin usuario asignado --</option>
                            </select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
