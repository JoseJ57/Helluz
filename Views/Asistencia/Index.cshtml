@{
    ViewData["Title"] = "Lista de Asistencias";
    var asistenciasAlumnos = ViewBag.AsistenciasAlumnos as List<Helluz.Models.AsistenciaAlumno>;
    var asistenciasInstructores = ViewBag.AsistenciasInstructores as List<Helluz.Models.AsistenciaInstructor>;
}

<div class="container-fluid py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="fas fa-clipboard-check"></i> Registro de Asistencias
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus"></i> Registrar Asistencia
            </a>
        </div>
    </div>

    <!-- Acordeón de tablas -->
    <div class="accordion" id="accordionAsistencia">
        <!-- Asistencias de alumnos -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingAlumnos">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAlumnos">
                    <i class="fas fa-user-graduate me-2"></i> Asistencias de Alumnos
                </button>
            </h2>
            <div id="collapseAlumnos" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    @if (asistenciasAlumnos != null && asistenciasAlumnos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle" id="tablaAlumnos">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Alumno</th>
                                        <th>Carnet</th>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in asistenciasAlumnos)
                                    {
                                        <tr>
                                            <td>@a.Alumno?.Nombre</td>
                                            <td>@a.Alumno?.Carnet</td>
                                            <td>@a.Fecha.ToString("dd/MM/yyyy")</td>
                                            <td>@a.Hora</td>
                                            <td>
                                                @if (a.Estado == Helluz.Dto.EstadoAsistencia.presente)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Presente</span>
                                                }
                                                else if (a.Estado == Helluz.Dto.EstadoAsistencia.falta)
                                                {
                                                    <span class="badge bg-danger"><i class="fas fa-times"></i> Ausente</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@a.Estado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> No hay asistencias de alumnos registradas.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Asistencias de instructores -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingInstructores">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInstructores">
                    <i class="fas fa-chalkboard-teacher me-2"></i> Asistencias de Instructores
                </button>
            </h2>
            <div id="collapseInstructores" class="accordion-collapse collapse">
                <div class="accordion-body">
                    @if (asistenciasInstructores != null && asistenciasInstructores.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle" id="tablaInstructores">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Instructor</th>
                                        <th>Carnet</th>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in asistenciasInstructores)
                                    {
                                        <tr>
                                            <td>@i.Instructor?.Nombre</td>
                                            <td>@i.Instructor?.Carnet</td>
                                            <td>@i.Fecha.ToString("dd/MM/yyyy")</td>
                                            <td>@i.Hora</td>
                                            <td>
                                                @if (i.Estado == Helluz.Dto.EstadoAsistencia.presente)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Presente</span>
                                                }
                                                else if (i.Estado == Helluz.Dto.EstadoAsistencia.falta)
                                                {
                                                    <span class="badge bg-danger"><i class="fas fa-times"></i> Ausente</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@i.Estado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> No hay asistencias de instructores registradas.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaAlumnos').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                order: [[2, 'desc']],
                pageLength: 10,
                responsive: true
            });

            $('#tablaInstructores').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                order: [[2, 'desc']],
                pageLength: 10,
                responsive: true
            });
        });
    </script>
}
