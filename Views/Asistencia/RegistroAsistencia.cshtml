@{
    Layout = null; // 🔹 Desactiva el layout principal
    ViewData["Title"] = "Registro de Asistencia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Asistencia.css" rel="stylesheet" />

</head>
<body>

    <div class="card">
        <h2>Registro de Asistencia</h2>
        <img class="imagen"  src="~/imagenes/HelluzLogo.jpg" alt="Alternate Text" />
        <form id="formAsistencia">
            <div class="mb-3">
                <label for="carnet" class="form-label">Carnet</label>
                <input type="text" id="carnet" name="carnet" class="form-control text-center" placeholder="Ingrese su carnet" required />
            </div>
            <div class="d-grid ">
                <button type="submit" class="btn">Registrar</button>
            </div>
        </form>

        <div id="mensaje" class="mt-3 text-center"></div>
    </div>
    <!-- jQuery y Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#formAsistencia").on("submit", function (e) {
                e.preventDefault();
                var carnet = $("#carnet").val().trim();

                if (!carnet) {
                    $("#mensaje").html(`<div class="alert alert-warning">Por favor, ingrese un carnet válido.</div>`);
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Registrar", "Asistencia")',
                    type: 'POST',
                    data: { carnet: carnet },
                    success: function (resp) {
                        $("#mensaje").html(`<div class="alert alert-success">${resp.mensaje}</div>`);
                        $("#formAsistencia")[0].reset();
                    },
                    error: function (err) {
                        var msg = err.responseJSON?.mensaje || "Error al registrar la asistencia.";
                        $("#mensaje").html(`<div class="alert alert-danger">${msg}</div>`);
                    }
                });
            });
        });
    </script>
</body>
</html>
