@{
    Layout = null; // 🔹 Desactiva el layout principal
    ViewData["Title"] = "Registro de Asistencia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="card p-4">
        <h2>Registro de Asistencia</h2>

        <form id="formAsistencia">
            <div class="mb-3">
                <label for="carnet" class="form-label">Carnet</label>
                <input type="text" id="carnet" name="carnet" class="form-control text-center" placeholder="Ingrese su carnet" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>

        <div id="mensaje" class="mt-3 text-center"></div>
    </div>

    <!-- jQuery y Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#formAsistencia").on("submit", function (e) {
                e.preventDefault();
                var carnet = $("#carnet").val().trim();

                if (!carnet) {
                    $("#mensaje").html(`<div class="alert alert-warning">Por favor, ingrese un carnet válido.</div>`);
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Registrar", "Asistencia")',
                    type: 'POST',
                    data: { carnet: carnet },
                    success: function (resp) {
                        $("#mensaje").html(`<div class="alert alert-success">${resp.mensaje}</div>`);
                        $("#formAsistencia")[0].reset();
                    },
                    error: function (err) {
                        var msg = err.responseJSON?.mensaje || "Error al registrar la asistencia.";
                        $("#mensaje").html(`<div class="alert alert-danger">${msg}</div>`);
                    }
                });
            });
        });
    </script>
</body>
</html>
