

@{
    ViewData["Title"] = "RegistrarAsistencia";
}

<h1>RegistrarAsistencia</h1>
<form id="formAsistencia">
    <div class="mb-3">
        <label for="carnet" class="form-label">Carnet</label>
        <input type="text" id="carnet" name="carnet" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
<div id="mensaje" class="mt-3"></div>

@section Scripts {
    <script>
        $("#formAsistencia").on("submit", function (e) {
            e.preventDefault();
            var carnet = $("#carnet").val();

            $.ajax({
                url: '@Url.Action("RegistrarAsistenciaPorCarnet", "Asistencia")',
                type: 'POST',
                data: { carnet: carnet },
                success: function (resp) {
                    $("#mensaje").html(`<div class="alert alert-success">${resp.mensaje}</div>`);
                    $("#formAsistencia")[0].reset();
                },
                error: function (err) {
                    var msg = err.responseJSON?.message || "Error al registrar la asistencia.";
                    $("#mensaje").html(`<div class="alert alert-danger">${msg}</div>`);
                }
            });
        });
    </script>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
