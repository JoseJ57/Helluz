    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var offcanvasElement = document.getElementById('offcanvasMenu');

            // Inicializa el offcanvas con scroll y sin backdrop
            var offcanvas = new bootstrap.Offcanvas(offcanvasElement, {
                backdrop: false,  // No crea la capa gris
                scroll: true      // Permite que el contenido detrás siga siendo interactivo
            });

            // Evita que los links cierren el menú
            var links = offcanvasElement.querySelectorAll('.nav-link');
            links.forEach(function(link) {
                link.addEventListener('click', function (e) {
                    // No hacemos preventDefault, para que la navegación funcione
                    // Solo detenemos la propagación para que Bootstrap no cierre el offcanvas
                    e.stopImmediatePropagation();
                });
            });
        });
    </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
