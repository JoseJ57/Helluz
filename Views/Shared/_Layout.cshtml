
@using System.Security.Claims


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helluz</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Helluz.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            overflow-x: hidden;
        }

        .Encabezado {
            height: 100px;
            padding-top: 4px !important;
            padding-bottom: 4px !important;
        }

        main {
            margin-top: 100px;
            padding: 20px;
        }

        footer {
            margin-top: 20px;
        }

        .offcanvas-start {
            width: 200px !important;
        }

        .offcanvas {
            margin-top: 100px;
        }

        /* Campo de asistencia */
        #formAsistencia input {
            width: 150px;
        }
    </style>
</head>
<body>
    <!-- Header fijo con botón hamburguesa y logo -->
    <header class="Encabezado navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <button class="btn btn-dark me-2" id="btnMenu" type="button"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasMenu"
                        aria-controls="offcanvasMenu">
                    <i class="fas fa-bars fa-lg text-white"></i>
                </button>

                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/imagenes/HelluzLogo.jpeg" alt="Logo del sistema" width="60" height="60" />
                    <h4 class="ms-2 mb-0 text-white">Helluz</h4>
                </a>

                <!-- 🔹 Campo para registrar asistencia -->
                <form id="formAsistencia" class="d-flex align-items-center ms-3" onsubmit="registrarAsistencia(event)">
                    <input type="text" id="inputCarnet" class="form-control form-control-sm me-2"
                           placeholder="Carnet..." />
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check"></i>
                    </button>
                </form>
            </div>

            <ul class="navbar-nav flex-row">
                <li class="nav-item me-3">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Inicio
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">
                        <i class="fas fa-sign-out-alt"></i> Salir
                    </a>
                </li>
            </ul>
        </div>
    </header>

    <!-- Offcanvas lateral -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasMenu"
         aria-labelledby="offcanvasMenuLabel" data-bs-backdrop="false">
        <div class="offcanvas-header border-bottom border-secondary">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menú</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <ul class="navbar-nav flex-column w-100">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Asistencia" asp-action="Index">
                        <i class=""></i> Asistencia
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Alumnoes" asp-action="Index">
                        <i class="fas fa-user-graduate"></i> Alumnos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Inscripciones" asp-action="Index">
                        <i class="fas fa-desktop"></i> Inscripciones
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Instructors" asp-action="Index">
                        <i class="fas fa-chalkboard-teacher"></i> Instructores
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">
                        <i class="fas fa-chalkboard-teacher"></i> Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Membresias" asp-action="Index">
                        <i class="fas fa-id-card"></i> Membresías
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Horarios" asp-action="Index">
                        <i class="fas fa-calendar-alt"></i> Horarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Disciplinas" asp-action="Index">
                        <i class="fas fa-dumbbell"></i> Disciplinas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="TokenQrs" asp-action="Index">
                        <i class="fas fa-qrcode"></i> Qr
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="ReporteEstadosMembresias" asp-action="Index">
                        <i class="fas fa-qrcode"></i> Estados Inscripciones
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="ReportesFinancieros" asp-action="Index">
                        <i class="fas fa-qrcode"></i> Finanzas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3 "> 
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Helluz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Script del menú lateral
        document.addEventListener('DOMContentLoaded', function () {
            var offcanvasElement = document.getElementById('offcanvasMenu');
            var offcanvas = new bootstrap.Offcanvas(offcanvasElement, {
                backdrop: false,
                scroll: true
            });

            var links = offcanvasElement.querySelectorAll('.nav-link');
            links.forEach(function (link) {
                link.addEventListener('click', function (e) {
                    e.stopImmediatePropagation();
                });
            });
        });

        // Script para registrar asistencia
        async function registrarAsistencia(e) {
            e.preventDefault();
            const carnet = document.getElementById("inputCarnet").value.trim();

            if (!carnet) {
                alert("Por favor, ingrese un carnet válido.");
                return;
            }

            try {
                const respuesta = await fetch("/Asistencia/Registrar", {
                    method: "POST",
                    headers: { "Content-Type": "application/x-www-form-urlencoded" },
                    body: `carnet=${encodeURIComponent(carnet)}`
                });

                const data = await respuesta.json();
                alert(data.mensaje);
                document.getElementById("inputCarnet").value = "";
            } catch {
                alert("Error al registrar la asistencia.");
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
