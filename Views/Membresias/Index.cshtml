@model IEnumerable<Helluz.Models.Membresia>

@{
    ViewData["Title"] = "Membresías y Promociones";
}

<div class="container-fluid py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2><i class="fas fa-id-card"></i> Membresías y Promociones</h2>
        </div>
        <div class="col-md-6 text-end">

            <!--<a asp-action="Create" class="btn btn-primary">-->

            <a asp-action="Create" class="btn ">

                <i class="fas fa-plus"></i> Nueva Membresía / Promoción
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="tablaMembresias">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Costo</th>
                            <th>Sesiones</th>
                            <th>Días/Semana</th>
                            <th>Semanas</th>
                            <th>Vigencia</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.EsPromocion)
                                    {
                                        <span class="text">
                                            <i class="fas fa-tag"></i> Promoción
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text">
                                            <i class="fas fa-id-card"></i> Membresía
                                        </span>
                                    }
                                </td>
                                <td class="text">@item.Nombre</td>
                                <td class="text">$@item.Costo.ToString("N2")</td>

                                <td>@item.Nro_sesiones</td>
                                <td>@item.DiasPorSemana</td>
                                <td>@item.DuracionSemanas</td>

                                <td>
                                    <span class="text ">
                                        @item.Nro_sesiones sesiones
                                    </span>
                                </td>

                                <td>
                                    @if (item.EsPromocion && item.FechaActivo.HasValue && item.FechaInactivo.HasValue)
                                    {
                                        <small class="text">

                                            <i class="fas fa-calendar-alt"></i>

                                            <i class="fas fa-calendar-alt "></i>

                                            @item.FechaActivo.Value.ToString("dd MMM") -
                                            @item.FechaInactivo.Value.ToString("dd MMM")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text">Todo el año</small>
                                    }
                                </td>
                                <td>
                                    @if (item.Estado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Activa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times"></i> Inactiva
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdMembresia"
                                           class="btn btn-details" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdMembresia"
                                           class="btn btn-edit" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdMembresia"
                                           class="btn btn-delete" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaMembresias').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[0, 'asc']],
                pageLength: 10
            });
        });
    </script>
}
