@model Helluz.Models.Membresia

@{
    ViewData["Title"] = "Crear Membresía/Promoción";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card ">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Nueva Membresía/Promoción
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formMembresia">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Tipo: Membresía o Promoción -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Tipo</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="EsPromocion"
                                       id="tipoMembresia" value="false" checked>
                                <label class="form-check-label" for="tipoMembresia">
                                    <i class="fas fa-id-card text-info"></i> Membresía Regular
                                    <small class="text-muted d-block">Activa todo el año</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="EsPromocion"
                                       id="tipoPromocion" value="true">
                                <label class="form-check-label" for="tipoPromocion">
                                    <i class="fas fa-tag text-warning"></i> Promoción Temporal
                                    <small class="text-muted d-block">Se activa/desactiva automáticamente según fechas</small>
                                </label>
                            </div>
                        </div>

                        <hr>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Membresía Premium, Promo Verano 2025" autocomplete="off"/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Costo y Sesiones en dos columnas -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Costo" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Costo" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="Costo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Dias, Semanas y Nro Sesiones-->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DiasPorSemana" class="form-label fw-bold"></label>
                                <input asp-for="DiasPorSemana" id="DiasPorSemana" class="form-control" type="number" min="1" />
                                <span asp-validation-for="DiasPorSemana" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DuracionSemanas" class="form-label fw-bold"></label>
                                <input asp-for="DuracionSemanas" id="DuracionSemanas" class="form-control" type="number" min="1" />
                                <span asp-validation-for="DuracionSemanas" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nro_sesiones" class="form-label fw-bold">Número de Sesiones</label>
                                    <input asp-for="Nro_sesiones" id="Nro_sesiones" class="form-control" type="number" readonly />
                                    <span asp-validation-for="Nro_sesiones" class="text-danger"></span>
                                </div>
                            </div>

                        </div>


                        <!-- Fechas (solo para promociones) -->
                        <div id="seccionFechas" style="display: none;">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Fechas de Vigencia:</strong> Define cuándo la promoción estará activa cada año.
                                El sistema activará/desactivará automáticamente según estas fechas.
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="FechaActivo" class="form-label fw-bold">
                                            Fecha de Inicio
                                        </label>
                                        <input asp-for="FechaActivo" class="form-control" type="date" />
                                        <span asp-validation-for="FechaActivo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="FechaInactivo" class="form-label fw-bold">
                                            Fecha de Fin
                                        </label>
                                        <input asp-for="FechaInactivo" class="form-control" type="date" />
                                        <span asp-validation-for="FechaInactivo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Estado (oculto, se calcula automáticamente) -->
                        <input asp-for="Estado" type="hidden" value="true" />

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Mostrar/ocultar sección de fechas según el tipo
            $('input[name="EsPromocion"]').change(function() {
                if ($(this).val() === 'true') {
                    $('#seccionFechas').slideDown();
                } else {
                    $('#seccionFechas').slideUp();
                    // Limpiar fechas si cambia a membresía
                    $('input[name="FechaActivo"]').val('');
                    $('input[name="FechaInactivo"]').val('');
                }
            });

            // Validación personalizada antes de enviar
            $('#formMembresia').submit(function(e) {
                var esPromocion = $('input[name="EsPromocion"]:checked').val() === 'true';

                if (esPromocion) {
                    var fechaInicio = $('input[name="FechaActivo"]').val();
                    var fechaFin = $('input[name="FechaInactivo"]').val();

                    if (!fechaInicio || !fechaFin) {
                        e.preventDefault();
                        alert('Las promociones deben tener fechas de inicio y fin.');
                        return false;
                    }
                }
            });

            // --- NUEVO: Calcular Nro_sesiones automáticamente ---
            function actualizarSesiones() {
                var dias = parseInt($('#DiasPorSemana').val()) || 0;
                var semanas = parseInt($('#DuracionSemanas').val()) || 0;
                $('#Nro_sesiones').val(dias * semanas);
            }

            $('#DiasPorSemana, #DuracionSemanas').on('input change', actualizarSesiones);

            // Ejecutar al cargar la página para inicializar
            actualizarSesiones();
        });
    </script>
}
