@model Helluz.Controllers.HorariosController.HorarioViewModel

@{
    ViewData["Title"] = "Eliminar Horario";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header card-delete">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        ¿Estás seguro de que deseas eliminar este horario? Esta acción no se puede deshacer.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Hora:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-clock text-primary"></i> @Model.Hora
                        </dd>

                        <dt class="col-sm-4">Instructor:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-user-tie text-primary"></i> @Model.Instructor
                        </dd>

                        <dt class="col-sm-4">Lunes:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DisciplinaLunes))
                            {
                                <span class="badge bg-info">@Model.DisciplinaLunes</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Martes:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DisciplinaMartes))
                            {
                                <span class="badge bg-info">@Model.DisciplinaMartes</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Miércoles:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DisciplinaMiercoles))
                            {
                                <span class="badge bg-info">@Model.DisciplinaMiercoles</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Jueves:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DisciplinaJueves))
                            {
                                <span class="badge bg-info">@Model.DisciplinaJueves</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Viernes:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.DisciplinaViernes))
                            {
                                <span class="badge bg-info">@Model.DisciplinaViernes</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdHorario" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>

                            <button type="submit" class="btn btn-delete">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
