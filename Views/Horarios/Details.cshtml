@model Helluz.Controllers.HorariosController.HorarioViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle del Horario</h1>

<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.Hora</dd>

        <dt class="col-sm-2">Instructor</dt>
        <dd class="col-sm-10">@Model.Instructor</dd>

        <dt class="col-sm-2">Lunes</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.DisciplinaLunes) ? "No asignado" : Model.DisciplinaLunes)</dd>

        <dt class="col-sm-2">Martes</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.DisciplinaMartes) ? "No asignado" : Model.DisciplinaMartes)</dd>

        <dt class="col-sm-2">Miércoles</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.DisciplinaMiercoles) ? "No asignado" : Model.DisciplinaMiercoles)</dd>

        <dt class="col-sm-2">Jueves</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.DisciplinaJueves) ? "No asignado" : Model.DisciplinaJueves)</dd>

        <dt class="col-sm-2">Viernes</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.DisciplinaViernes) ? "No asignado" : Model.DisciplinaViernes)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdHorario" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
