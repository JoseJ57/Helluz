@model IEnumerable<Helluz.Controllers.HorariosController.HorarioViewModel>

@{
    ViewData["Title"] = "Horarios";
}

<div class="container py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-calendar-alt me-2"></i> Gestión de Horarios
            </h4>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold">
                <i class="fas fa-plus-circle"></i> Nuevo Horario
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No hay horarios registrados.
                </div>
            }
            else
            {
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Horario</th>
                            <th>Lunes</th>
                            <th>Martes</th>
                            <th>Miércoles</th>
                            <th>Jueves</th>
                            <th>Viernes</th>
                            <th>Instructor</th>
                            <th style="width: 170px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Horario -->
                                <td>@item.Hora</td>

                                <!-- Lunes -->
                                <td>@item.DisciplinaLunes</td>

                                <!-- Martes -->
                                <td>@item.DisciplinaMartes</td>

                                <!-- Miércoles -->
                                <td>@item.DisciplinaMiercoles</td>

                                <!-- Jueves -->
                                <td>@item.DisciplinaJueves</td>

                                <!-- Viernes -->
                                <td>@item.DisciplinaViernes</td>

                                <!-- Instructor -->
                                <td>@item.Instructor</td>

                                <!-- Acciones -->
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdHorario" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdHorario" class="btn btn-info btn-sm me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdHorario" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
