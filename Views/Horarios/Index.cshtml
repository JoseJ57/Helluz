@model IEnumerable<Helluz.Controllers.HorariosController.HorarioViewModel>

@{
    ViewData["Title"] = "Horarios";
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="fas fa-calendar-alt"></i> Gestión de Horarios
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-register shadow-sm">
                <i class="fas fa-plus"></i> Nuevo Horario
            </a>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla -->
    <div class="card shadow-lg">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No hay horarios registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle" id="tablaHorarios">
                        <thead class="table-dark">
                            <tr>
                                <th>Horario</th>
                                <th>Lunes</th>
                                <th>Martes</th>
                                <th>Miércoles</th>
                                <th>Jueves</th>
                                <th>Viernes</th>
                                <th>Instructor</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Hora</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.DisciplinaLunes) ? "<span class='text-muted'>—</span>" : item.DisciplinaLunes)</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.DisciplinaMartes) ? "<span class='text-muted'>—</span>" : item.DisciplinaMartes)</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.DisciplinaMiercoles) ? "<span class='text-muted'>—</span>" : item.DisciplinaMiercoles)</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.DisciplinaJueves) ? "<span class='text-muted'>—</span>" : item.DisciplinaJueves)</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.DisciplinaViernes) ? "<span class='text-muted'>—</span>" : item.DisciplinaViernes)</td>
                                    <td>@Html.Raw(string.IsNullOrEmpty(item.Instructor) ? "<span class='text-muted'>Sin asignar</span>" : item.Instructor)</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IdHorario"
                                               class="btn btn-sm btn-details" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdHorario"
                                               class="btn btn-sm btn-edit" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdHorario"
                                               class="btn btn-sm btn-delete" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaHorarios').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[0, 'asc']],
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true
            });
        });
    </script>
}
