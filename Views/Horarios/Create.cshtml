@model Helluz.Models.Horario
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Crear Horario";
}

<style>
    .horario-table {
        margin: 0 auto;
        max-width: 100%;
        border-collapse: separate;
        border-spacing: 0.5rem;
    }

        .horario-table td,
        .horario-table th {
            min-width: 120px;
            text-align: center;
            vertical-align: middle;
        }

    .dia-container {
        transition: all 0.3s ease;
    }

    .horario-table select.form-select {
        width: 100%;
        min-width: 120px;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-alt"></i> Crear Nuevo Horario
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="formHorario">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Información del Horario -->
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle"></i>
                            <strong>Instrucciones:</strong> Define el rango de horas y selecciona los días activos marcando el checkbox. Luego asigna la disciplina para cada día y el instructor responsable.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered horario-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-clock"></i> Horario</th>
                                        <th><i class="fas fa-calendar-day"></i> Lunes</th>
                                        <th><i class="fas fa-calendar-day"></i> Martes</th>
                                        <th><i class="fas fa-calendar-day"></i> Miércoles</th>
                                        <th><i class="fas fa-calendar-day"></i> Jueves</th>
                                        <th><i class="fas fa-calendar-day"></i> Viernes</th>
                                        <th><i class="fas fa-user-tie"></i> Instructor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <!-- Horario -->
                                        <td class="px-3">
                                            <div class="mb-2">
                                                <label class="form-label fw-bold small mb-1">Inicio</label>
                                                <input asp-for="HoraInicio" class="form-control form-control-sm" type="time" />
                                                <span asp-validation-for="HoraInicio" class="text-danger small"></span>
                                            </div>
                                            <div>
                                                <label class="form-label fw-bold small mb-1">Fin</label>
                                                <input asp-for="HoraFin" class="form-control form-control-sm" type="time" />
                                                <span asp-validation-for="HoraFin" class="text-danger small"></span>
                                            </div>
                                        </td>

                                        <!-- Lunes -->
                                        <td class="px-3">
                                            <div id="Lunes-container" class="dia-container p-3 border rounded bg-light" style="opacity:0.5;">
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" id="Lunes-check" class="form-check-input dia-toggle" data-target="Lunes" />
                                                    <label for="Lunes-check" class="form-check-label fw-bold">
                                                        Activar
                                                    </label>
                                                </div>
                                                <select asp-for="IdDisciplinaLunes" class="form-select form-select-sm" asp-items="ViewBag.Disciplinas" disabled>
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                            </div>
                                        </td>

                                        <!-- Martes -->
                                        <td class="px-3">
                                            <div id="Martes-container" class="dia-container p-3 border rounded bg-light" style="opacity:0.5;">
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" id="Martes-check" class="form-check-input dia-toggle" data-target="Martes" />
                                                    <label for="Martes-check" class="form-check-label fw-bold">
                                                        Activar
                                                    </label>
                                                </div>
                                                <select asp-for="IdDisciplinaMartes" class="form-select form-select-sm" asp-items="ViewBag.Disciplinas" disabled>
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                            </div>
                                        </td>

                                        <!-- Miércoles -->
                                        <td class="px-3">
                                            <div id="Miercoles-container" class="dia-container p-3 border rounded bg-light" style="opacity:0.5;">
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" id="Miercoles-check" class="form-check-input dia-toggle" data-target="Miercoles" />
                                                    <label for="Miercoles-check" class="form-check-label fw-bold">
                                                        Activar
                                                    </label>
                                                </div>
                                                <select asp-for="IdDisciplinaMiercoles" class="form-select form-select-sm" asp-items="ViewBag.Disciplinas" disabled>
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                            </div>
                                        </td>

                                        <!-- Jueves -->
                                        <td class="px-3">
                                            <div id="Jueves-container" class="dia-container p-3 border rounded bg-light" style="opacity:0.5;">
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" id="Jueves-check" class="form-check-input dia-toggle" data-target="Jueves" />
                                                    <label for="Jueves-check" class="form-check-label fw-bold">
                                                        Activar
                                                    </label>
                                                </div>
                                                <select asp-for="IdDisciplinaJueves" class="form-select form-select-sm" asp-items="ViewBag.Disciplinas" disabled>
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                            </div>
                                        </td>

                                        <!-- Viernes -->
                                        <td class="px-3">
                                            <div id="Viernes-container" class="dia-container p-3 border rounded bg-light" style="opacity:0.5;">
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" id="Viernes-check" class="form-check-input dia-toggle" data-target="Viernes" />
                                                    <label for="Viernes-check" class="form-check-label fw-bold">
                                                        Activar
                                                    </label>
                                                </div>
                                                <select asp-for="IdDisciplinaViernes" class="form-select form-select-sm" asp-items="ViewBag.Disciplinas" disabled>
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                            </div>
                                        </td>

                                        <!-- Instructor -->
                                        <td class="px-3">
                                            <div class="p-2">
                                                <label class="form-label fw-bold small mb-2">Asignar Instructor</label>
                                                <select asp-for="IdInstructor" class="form-select" asp-items="ViewBag.Instructores">
                                                    <option value="">-- Seleccionar --</option>
                                                </select>
                                                <span asp-validation-for="IdInstructor" class="text-danger small"></span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-register">
                                <i class="fas fa-save"></i> Crear Horario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function() {
            // Activar/desactivar select según el checkbox
            $('.dia-toggle').each(function() {
                $(this).on('change', function() {
                    var dia = $(this).data('target');
                    var container = $('#' + dia + '-container');
                    var select = container.find('select');

                    if ($(this).is(':checked')) {
                        select.prop('disabled', false);
                        container.css('opacity', '1').removeClass('bg-light').addClass('bg-white');
                    } else {
                        select.prop('disabled', true);
                        select.val('');
                        container.css('opacity', '0.5').removeClass('bg-white').addClass('bg-light');
                    }
                });
            });

            // Validación del formulario
            $('#formHorario').submit(function(e) {
                var horaInicio = $('input[name="HoraInicio"]').val();
                var horaFin = $('input[name="HoraFin"]').val();

                if (!horaInicio || !horaFin) {
                    e.preventDefault();
                    alert('Debe especificar el horario de inicio y fin.');
                    return false;
                }

                // Verificar que al menos un día esté seleccionado
                var algunDiaSeleccionado = false;
                $('.dia-toggle').each(function() {
                    if ($(this).is(':checked')) {
                        algunDiaSeleccionado = true;
                        return false; // break
                    }
                });

                if (!algunDiaSeleccionado) {
                    e.preventDefault();
                    alert('Debe seleccionar al menos un día de la semana.');
                    return false;
                }
            });
        });
    </script>
}