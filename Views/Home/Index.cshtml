@model DashboardViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/Home.css" rel="stylesheet" />
</head>
<body>
    <div class="seccion">

        <div class="cardhome">
            <h4>Alumnos Registrados</h4>
            <p>@Model.TotalAlumnos </p>
            <i class="icono alumno fas fa-user-graduate"></i>

        </div>

        <div class="cardhome">
            <h4>Instructores Registrados</h4>
            <p>@Model.TotalInstructores </p>
            <i class="icono instructor fas fa-chalkboard-teacher "></i>

        </div>

        <div class="cardhome">
            <h4>Usuarios Registrados</h4>
            <p>@Model.TotalUsuarios </p>
            <i class="icono usuario fas fa-users"></i>

        </div>

        <div class="cardhome">
            <h4>Ganancias del Mes Actual</h4>
            <p>@Model.TotalDineroMesActual </p>
            <i class="icono ganancias fas fa-dollar-sign"></i>

        </div>

        <div class="cardhome">
            <h4>Asistencias del día</h4>
            <br />
            <br />
            <p>@Model.AsistenciasHoy</p>
            <i class="icono asistencia fas fa-clipboard-check"></i>

        </div>

    </div>

</body>
</html>


<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<script>
    document.querySelectorAll("h3").forEach(el => {
        const target = +el.innerText.replace(" Bs", "");
        let count = 0;
        const step = target / 40;

        const update = () => {
            count += step;
            if (count < target) {
                el.innerText = Math.floor(count);
                requestAnimationFrame(update);
            } else {
                el.innerText = target;
            }
        };

        update();
    });
</script>
