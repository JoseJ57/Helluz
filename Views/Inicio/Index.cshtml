@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academia MMA - Control de Asistencia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/inicio.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="overlay"></div>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Control de Asistencia - Academia HELLUZ</h1>
            <p>Gestiona tus clases, registra entrenamientos y lleva el control de tus alumnos con precisión y estilo.</p>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Login")" class="btn btn-primary btn-lg me-3">Ingresar al Sistema</a>
                <a href="@Url.Action("Informacion", "Inicio")" class="btn btn-outline-light btn-lg">Más Información</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container text-center">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h4>Gestión de Alumnos</h4>
                    <p>Administra la asistencia y el rendimiento de tus luchadores fácilmente.</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-calendar-check-fill"></i>
                    </div>
                    <h4>Registro Automático</h4>
                    <p>Control de asistencia mediante lector, código o registro manual.</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-bar-chart-fill"></i>
                    </div>
                    <h4>Estadísticas en Tiempo Real</h4>
                    <p>Visualiza el progreso de tus alumnos y el desempeño de tus clases.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="border-top footer text-white icons-footer">
        <small>© 2025 Academia HELLUZ | Sistema de Control de Asistencia </small>
        <a href="https://www.facebook.com/AsociacionDepartamentalDeArtesMarcialesMixtasOruro" target="_blank"><i class="fab fa-facebook"></i></a>
        <a href="https://www.instagram.com/helluzteam_or/" target="_blank"><i class="fab fa-instagram"></i></a>
        <a href="https://www.tiktok.com/@@teamhelluzmma" target="_blank"><i class="fab fa-tiktok"></i></a>
        <a href="https://wa.me/59170434034?text=Hola,%20quiero%20más%20información" target="_blank"><i class="fas fa-phone"></i></a>
    </footer>

