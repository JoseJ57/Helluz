@model IEnumerable<Helluz.Models.Inscripcion>
@{
    ViewData["Title"] = "Reporte de Estados de Membresías";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-file-earmark-bar-graph"></i> Reporte de Membresías</h2>
        </div>
    </div>

    <!-- FILTROS -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Búsqueda por texto -->
                    <div class="col-md-4">
                        <label class="form-label">Buscar Alumno</label>
                        <input type="text"
                               name="busqueda"
                               value="@ViewBag.Busqueda"
                               class="form-control"
                               placeholder="Nombre, Apellido o Carnet" />
                        <small class="form-text text-muted">Busca por nombre, apellido o carnet</small>
                    </div>

                    <!-- Fecha Desde -->
                    <div class="col-md-2">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date"
                               name="fechaDesde"
                               value="@ViewBag.FechaDesde"
                               class="form-control" />
                    </div>

                    <!-- Fecha Hasta -->
                    <div class="col-md-2">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date"
                               name="fechaHasta"
                               value="@ViewBag.FechaHasta"
                               class="form-control" />
                    </div>

                    <!-- Estado -->
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="0" selected="@(ViewBag.EstadoSeleccionado == Helluz.Dto.EstadoInscripcion.Activa ? "selected" : null)">Activa</option>
                            <option value="1" selected="@(ViewBag.EstadoSeleccionado == Helluz.Dto.EstadoInscripcion.Vencida ? "selected" : null)">Vencida</option>
                        </select>
                    </div>

                    <!-- Botones -->
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle">Recargar</i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- ESTADÍSTICAS -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Inscripciones</h5>
                    <h2 class="mb-0">@ViewBag.TotalInscripciones</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Activas</h5>
                    <h2 class="mb-0">@ViewBag.InscripcionesActivas</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Vencidas</h5>
                    <h2 class="mb-0">@ViewBag.InscripcionesVencidas</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Ingreso Total</h5>
                    <h2 class="mb-0">@ViewBag.IngresoTotal.ToString("C")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- BOTÓN EXPORTAR -->
    @if (Model != null && Model.Any())
    {
        <div class="mb-3">
            <a asp-action="Exportar"
               asp-route-busqueda="@ViewBag.Busqueda"
               asp-route-fechaDesde="@ViewBag.FechaDesde"
               asp-route-fechaHasta="@ViewBag.FechaHasta"
               asp-route-estado="@ViewBag.EstadoSeleccionado"
               class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Exportar a CSV
            </a>
        </div>
    }

    <!-- TABLA DE RESULTADOS -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Resultados: @ViewBag.TotalInscripciones inscripciones encontradas</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Carnet</th>
                                <th>Alumno</th>
                                <th>Membresía</th>
                                <th>Precio</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Estado</th>
                                <th>Días Restantes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var diasRestantes = (item.FechaFin.ToDateTime(TimeOnly.MinValue) - DateTime.Now).Days;
                                var claseEstado = item.Estado == Helluz.Dto.EstadoInscripcion.Activa ? "success" : "danger";

                                <tr>
                                    <td>@item.Alumno.Carnet</td>
                                    <td>@item.Alumno.Nombre @item.Alumno.Apellido</td>
                                    <td>@item.Membresia?.Nombre</td>
                                    <td>@item.Membresia?.Costo.ToString("C")</td>
                                    <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-@claseEstado">
                                            @item.Estado
                                        </span>
                                    </td>
                                    <td>
                                        @if (diasRestantes > 0)
                                        {
                                            <span class="text-success">@diasRestantes días</span>
                                        }
                                        else if (diasRestantes == 0)
                                        {
                                            <span class="text-warning">Vence hoy</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Vencida (@Math.Abs(diasRestantes) días)</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> No se encontraron inscripciones con los filtros seleccionados.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Opcional: Auto-submit al cambiar filtros
        document.querySelectorAll('input[type="date"], select[name="estado"]').forEach(element => {
            element.addEventListener('change', function() {
                // Descomenta si quieres que filtre automáticamente
                // this.form.submit();
            });
        });
    </script>
}