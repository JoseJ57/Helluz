@model IEnumerable<Helluz.Models.Inscripcion>

@{
    ViewData["Title"] = "Reporte de Inscripciones";
}
@{
    Helluz.Dto.EstadoInscripcion? estadoSeleccionado = ViewBag.EstadoFiltro as Helluz.Dto.EstadoInscripcion?;
}
<div class="container py-4">
    <h2 class="mb-4">Reporte de Inscripciones</h2>

    <!-- Formulario de filtros -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <label for="busqueda" class="form-label">Buscar alumno</label>
            <input type="text" id="busqueda" name="busqueda" value="@ViewBag.Busqueda" class="form-control" placeholder="Nombre, apellido o carnet">
        </div>

        <div class="col-md-3">
            <label for="fechaDesde" class="form-label">Fecha desde</label>
            <input type="date" id="fechaDesde" name="fechaDesde" value="@(ViewBag.FechaDesde != null ? ((DateTime)ViewBag.FechaDesde).ToString("yyyy-MM-dd") : "")" class="form-control">
        </div>

        <div class="col-md-3">
            <label for="fechaHasta" class="form-label">Fecha hasta</label>
            <input type="date" id="fechaHasta" name="fechaHasta" value="@(ViewBag.FechaHasta != null ? ((DateTime)ViewBag.FechaHasta).ToString("yyyy-MM-dd") : "")" class="form-control">
        </div>

        <div class="col-md-3">
            <label for="estado" class="form-label">Estado</label>
           <select id="estado" class="form-select">
    <option value="")>Todos</option>
    <option value="activa")>Activa</option>
    <option value="vencida")>Vencida</option>
</select>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a href="@Url.Action("Reporte")" class="btn btn-secondary">Limpiar</a>
        </div>
    </form>

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="alert alert-info">
                Total de inscripciones: <strong>@ViewBag.TotalInscripciones</strong>
            </div>
        </div>
        <div class="col-md-4">
            <div class="alert alert-success">
                Inscripciones activas: <strong>@ViewBag.InscripcionesActivas</strong>
            </div>
        </div>
        <div class="col-md-4">
            <div class="alert alert-danger">
                Inscripciones vencidas: <strong>@ViewBag.InscripcionesVencidas</strong>
            </div>
        </div>
    </div>

    <!-- Tabla de resultados -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Alumno</th>
                    <th>Carnet</th>
                    <th>Membresía</th>
                    <th>Fecha Inicio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var inscripcion in Model)
                    {
                        <tr>
                            <td>@inscripcion.Alumno.Nombre @inscripcion.Alumno.Apellido</td>
                            <td>@inscripcion.Alumno.Carnet</td>
                            <td>@inscripcion.Membresia.Nombre</td>
                            <td>@inscripcion.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (inscripcion.Estado == Helluz.Dto.EstadoInscripcion.activa)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Vencida</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No se encontraron resultados</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
