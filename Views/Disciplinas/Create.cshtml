@model Helluz.Models.Disciplina

@{
    ViewData["Title"] = "Registrar Disciplina";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-dumbbell"></i> Registrar Nueva Disciplina
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formDisciplina">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Información de la Disciplina -->
                        <h5 class="mb-3">
                            <i class="fas fa-info-circle text-primary"></i> Información de la Disciplina
                        </h5>

                        <!-- Nombre de la Disciplina -->
                        <div class="mb-3">
                            <label asp-for="NombreDisciplina" class="form-label fw-bold"></label>
                            <input asp-for="NombreDisciplina" class="form-control" placeholder="Ej: Yoga, Pilates, CrossFit" autocomplete="off" />
                            <span asp-validation-for="NombreDisciplina" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Describe las características, beneficios o información relevante de esta disciplina..." autocomplete="off"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-lightbulb"></i> Opcional: Agrega una descripción para ayudar a los usuarios a conocer más sobre esta disciplina.
                            </small>
                        </div>

                        <hr>

                        <!-- Estado -->
                        <h5 class="mb-3">
                            <i class="fas fa-toggle-on text-success"></i> Estado
                        </h5>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Estado" checked />
                                <label class="form-check-label" asp-for="Estado">
                                    <i class="fas fa-check-circle text-success"></i> Disciplina Activa
                                    <small class="text-muted d-block">La disciplina estará disponible para asignar a horarios y clases</small>
                                </label>
                            </div>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas btn-back fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas btn-save fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}