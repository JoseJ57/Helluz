@model Helluz.Models.Disciplina

@{
    ViewData["Title"] = "Registrar Disciplina";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-dumbbell"></i> Registrar Nueva Disciplina
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formDisciplina">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Nombre de la Disciplina -->
                        <div class="mb-3">
                            <label asp-for="NombreDisciplina" class="form-label fw-bold"></label>
                            <input asp-for="NombreDisciplina" class="form-control" autocomplete="off" />
                            <span asp-validation-for="NombreDisciplina" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" autocomplete="off"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Estado -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Estado" checked />
                            <label class="form-check-label fw-bold">
                                @Html.DisplayNameFor(model => model.Estado)
                            </label>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
