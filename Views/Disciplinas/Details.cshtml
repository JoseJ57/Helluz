@model Helluz.Models.Disciplina

@{
    ViewData["Title"] = "Detalles de Disciplina";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header card-details">
                    <h4 class="mb-0">
                        <i class="fas fa-dumbbell"></i> Detalles de la Disciplina
                    </h4>
                </div>

                <div class="card-body">
                    <!-- Encabezado -->
                    <div class="text-center mb-4">
                        <i class="fas fa-running fa-5x text-primary mb-2"></i>
                        <h3 class="fw-bold text-dark mb-0">@Model.NombreDisciplina</h3>
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle"></i> Información completa de la disciplina
                        </p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 text">ID:</dt>
                        <dd class="col-sm-8">#@Model.IdDisciplina</dd>

                        <dt class="col-sm-4 text">Nombre:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark fs-6">
                                <i class="fas fa-dumbbell"></i> @Model.NombreDisciplina
                            </span>
                        </dd>

                        <dt class="col-sm-4 text">Descripción:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                            {
                                <p>@Model.Descripcion</p>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Sin descripción registrada</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <h5>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> ACTIVA
                                    </span>
                                </h5>
                            }
                            else
                            {
                                <h5>
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle"></i> INACTIVA
                                    </span>
                                </h5>
                            }
                        </dd>
                    </dl>

                    <hr>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas btn-back fa-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.IdDisciplina" class="btn btn-warning me-2">
                                <i class="fas btn-edit fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdDisciplina" class="btn btn-danger">
                                <i class="fas btn-delete fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
