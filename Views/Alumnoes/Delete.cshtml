@model Helluz.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación de Alumno
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        ¿Estás seguro de que deseas eliminar este alumno?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-user"></i> Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4"><i class="fas fa-user"></i> Apellido:</dt>
                        <dd class="col-sm-8">@Model.Apellido</dd>

                        <dt class="col-sm-4"><i class="fas fa-id-card"></i> Carnet:</dt>
                        <dd class="col-sm-8">@Model.Carnet</dd>

                        <dt class="col-sm-4"><i class="fas fa-calendar-alt"></i> Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone"></i> Celular:</dt>
                        <dd class="col-sm-8">@Model.Celular</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone-volume"></i> Nro. Emergencia:</dt>
                        <dd class="col-sm-8">@Model.NroEmergencia</dd>

                        <dt class="col-sm-4"><i class="fas fa-envelope"></i> Correo:</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times-circle"></i> Inactivo
                                </span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdAlumno" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas btn-cancel fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas btn-delete fa-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
