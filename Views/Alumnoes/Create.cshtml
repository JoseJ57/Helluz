@model Helluz.Models.Alumno

@{
    ViewData["Title"] = "Registrar Alumno";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-create">
                    <h4 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Registrar Nuevo Alumno
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formAlumno">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Información Personal -->
                        <h5 class="mb-3">
                            <i class="fas fa-user text-primary"></i> Información Personal
                        </h5>

                        <!-- Nombre y Apellido -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" autocomplete="off" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Apellido" class="form-label fw-bold"></label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" autocomplete="off" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Carnet y Fecha de Nacimiento -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Carnet" class="form-label fw-bold"></label>
                                    <input asp-for="Carnet" class="form-control" placeholder="Ej: 12345678" autocomplete="off" />
                                    <span asp-validation-for="Carnet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- Información de Contacto -->
                        <h5 class="mb-3">
                            <i class="fas fa-address-book text-success"></i> Información de Contacto
                        </h5>

                        <!-- Correo -->
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Correo" class="form-control" type="email" placeholder="ejemplo@correo.com" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Celular y Número de Emergencia -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Celular" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                                        <input asp-for="Celular" class="form-control" placeholder="Ej: 70123456" autocomplete="off" />
                                    </div>
                                    <span asp-validation-for="Celular" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NroEmergencia" class="form-label fw-bold">
                                        Número de Emergencia
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
                                        <input asp-for="NroEmergencia" class="form-control" placeholder="Contacto de emergencia" autocomplete="off" />
                                    </div>
                                    <span asp-validation-for="NroEmergencia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- Estado -->
                        <h5 class="mb-3">
                            <i class="fas fa-toggle-on text-info"></i> Estado
                        </h5>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Estado" checked />
                                <label class="form-check-label" asp-for="Estado">
                                    <i class="fas fa-check-circle text-success"></i> Alumno Activo
                                    <small class="text-muted d-block">El alumno podrá inscribirse a clases y acceder al gimnasio</small>
                                </label>
                            </div>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas btn-cancel fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas btn-save fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}