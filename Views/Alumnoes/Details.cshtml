@model Helluz.Models.Alumno

@{
    ViewData["Title"] = "Detalles";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Detalles del Alumno
                    </h4>
                </div>

                <div class="card-body">
                    <!-- Encabezado -->
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">
                            @Model.Nombre @Model.Apellido
                        </h3>
                        <p class="text-muted mb-0">
                            <i class="fas fa-id-card"></i> Carnet: <strong>@Model.Carnet</strong>
                        </p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">#@Model.IdAlumno</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Apellido:</dt>
                        <dd class="col-sm-8">@Model.Apellido</dd>

                        <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">
                            @Model.FechaNacimiento.ToString("dd 'de' MMMM 'de' yyyy")
                        </dd>

                        <dt class="col-sm-4">Celular:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-phone"></i> @Model.Celular
                        </dd>

                        <dt class="col-sm-4">Nro. Emergencia:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-phone-volume"></i> @Model.NroEmergencia
                        </dd>

                        <dt class="col-sm-4">Correo:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-envelope"></i> @Model.Correo
                        </dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <h5>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> Activo
                                    </span>
                                </h5>
                            }
                            else
                            {
                                <h5>
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times-circle"></i> Inactivo
                                    </span>
                                </h5>
                            }
                        </dd>
                    </dl>

                    <hr>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.IdAlumno" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdAlumno" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
