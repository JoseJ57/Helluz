@model Helluz.Models.Alumno

@{
    ViewData["Title"] = "Editar Alumno";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header card-edit ">
                    <h4 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Editar Alumno
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="formAlumno">
                        <input type="hidden" asp-for="IdAlumno" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Nombre y Apellido -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold"></label>
                                <input asp-for="Nombre" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label fw-bold"></label>
                                <input asp-for="Apellido" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Carnet y Fecha de Nacimiento -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Carnet" class="form-label fw-bold"></label>
                                <input asp-for="Carnet" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Carnet" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Celular y Número de Emergencia -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Celular" class="form-label fw-bold"></label>
                                <input asp-for="Celular" class="form-control" />
                                <span asp-validation-for="Celular" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NroEmergencia" class="form-label fw-bold"></label>
                                <input asp-for="NroEmergencia" class="form-control" />
                                <span asp-validation-for="NroEmergencia" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Correo -->
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold"></label>
                            <input asp-for="Correo" class="form-control" type="email" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Estado -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Estado" />
                            <label class="form-check-label fw-bold" asp-for="Estado">Estado</label>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas bt-cancel fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas btn-save fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
